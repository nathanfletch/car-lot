@using CarLot.Models;
@using System.Collections.Generic;


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <title>Add</title>
</head>
<body>
  <h1>Cars in Inventory:</h1>
  
  
  @if (Model.Count == 0)
  {
    <p>There are no cars available.</p>
  }
  <ul>
  @foreach (Car item in Model)
  {
    @* <li>@item.Make @item.CarModel @item.Year $@item.Price @item.Miles miles</li> *@
    
    <li>
      <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">@item.Year @item.Make @item.CarModel</h5>
        <h6 class="card-subtitle mb-2 text-muted">$@item.Price</h6>
        <p class="card-text">This car is in excellent condition. It has only been driven @item.Miles miles</p>
      </div>
    </li>
  }
  </ul>
  <a href="/cars/new">Add new car</a>

  
  
  
</body>
</html>